<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F7E8" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/grizzcycle_logo"
        />

    <Button
        android:id="@+id/open_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:text="Open Map"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:background="#EDEDED"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <ImageView
        android:id="@+id/map_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu"
        android:layout_below="@id/logo"
        android:src="@drawable/oc_recycling"
        android:visibility="invisible"
        />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#daebc0">
        <RelativeLayout
            android:id="@+id/menu_home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_home_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_icon"
                />
            <TextView
                android:id="@+id/menu_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_home_icon"
                android:layout_centerHorizontal="true"
                android:text="Home"
                android:textSize="15dp"
                android:textColor="#000000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_scan_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/scanner_icon"
                />
            <TextView
                android:id="@+id/menu_scan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_scan_icon"
                android:layout_centerHorizontal="true"
                android:text="Scan"
                android:textSize="15dp"
                android:textColor="#000000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_search_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/search_icon"
                />
            <TextView
                android:id="@+id/menu_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_search_icon"
                android:layout_centerHorizontal="true"
                android:text="Search"
                android:textSize="15dp"
                android:textColor="#000000"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>