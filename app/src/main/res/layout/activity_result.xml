<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F7E8" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/grizzcycle_logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@id/logo"
        android:layout_above="@id/menu"
        android:gravity="center">
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of the Item"
            android:textSize="30sp"
            />
        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/itemBarcodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode #: 22641289496"
            />
        <TextView
            android:id="@+id/itemTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Bottle"
            />
        <TextView
            android:id="@+id/itemMaterialLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material: Plastic"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/recycleStatusIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/recycle_icon"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/recycleStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This item IS recyclable!"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/recycleStatusDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please deposit this item in the nearest recycling location."
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#daebc0">
        <RelativeLayout
            android:id="@+id/menu_home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_home_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_icon"
                />
            <TextView
                android:id="@+id/menu_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_home_icon"
                android:layout_centerHorizontal="true"
                android:text="Home"
                android:textSize="15dp"
                android:textColor="#000000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_scan_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/scanner_icon"
                />
            <TextView
                android:id="@+id/menu_scan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_scan_icon"
                android:layout_centerHorizontal="true"
                android:text="Scan"
                android:textSize="15dp"
                android:textColor="#000000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_search_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/search_icon"
                />
            <TextView
                android:id="@+id/menu_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_search_icon"
                android:layout_centerHorizontal="true"
                android:text="Search"
                android:textSize="15dp"
                android:textColor="#000000"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>